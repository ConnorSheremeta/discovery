    <title>University of Alberta Libraries</title>
    <%= opensearch_description_tag application_name, opensearch_catalog_path(:format => 'xml', :only_path => false) %>
    <%# favicon_link_tag asset_path('favicon.ico') %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", "https://fonts.googleapis.com/css?family=Abel", "ualib-home" %>
    <%= javascript_include_tag "application", "ualib-home" %>
