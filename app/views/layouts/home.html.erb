      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>
  <body>
    <!-- Start Header and Navigation -->
    <div class="navbar-fixed-top" id="top"><a name="top"></a>
      <div class="container">
        <div class="collapse navbar-collapse hidden-xs"> <!-- UofA Blade -->
          <ul class="nav navbar-nav">
             <li><a href="https://myualberta.ualberta.ca/home/">My UAlberta</a></li>
            <li><a href="http://webapps.srv.ualberta.ca/search/">Find a Person</a></li>
            <li><a href="http://www.onecard.ualberta.ca/">ONEcard</a></li>
            <li><a href="https://www.beartracks.ualberta.ca/">Bear Tracks</a></li>
            <li><a href="http://www.campusmap.ualberta.ca/">Maps</a></li>
            <li><a href="https://weblogin.srv.ualberta.ca/">Email &amp; Apps</a></li>
            <li><a href="https://eclass.srv.ualberta.ca/portal/">eClass</a></li>
            <li><a href="https://www.library.ualberta.ca/" class="last">Libraries</a></li>
          </ul>
        </div> <!-- End UofA Blade -->
        <div class="row header">
          <div class="container">
            <div class="col-xs-8 col-md-6 col-sm-5">
              <h1><a data-scroll href="#top"><%= image_tag "ualib-logo.png", :class => "ualogo", :alt => "University of Alberta Libraries" %></a></h1>
            </div>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <h2>menu</h2><!-- Mobile menu button -->
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button><!-- End mobile menu button -->
            <div class="col-xs-12 col-md-6 col-sm-7">
              <ul class="ask">
                <li><a href="https://www.library.ualberta.ca/askus/" class="ask-main">Ask Us</a></li>
                <li><a href="https://www.library.ualberta.ca/askus/" class="hidden-xs">Text</a></li>
                <li><a href="https://www.library.ualberta.ca/askus/" class="hidden-xs">Chat</a></li>
                <li><a href="https://www.library.ualberta.ca/ereference/email/" class="hidden-xs">Email</a></li>
                <li><a href="https://www.library.ualberta.ca/askus/" class="last hidden-xs">Phone</a></li> 
              </ul>
            </div>
            <div id="navbar" class="collapse col-xs-10"><!-- Mobile menu -->
              <ul>
                <li class="active"><a data-scroll href="#top"  data-toggle="collapse" data-target="#navbar">Search &amp; Home</a></li>
                <li><a data-scroll href="#hours-anch" data-toggle="collapse" data-target="#navbar">Hours and Locations</a></li>
                <li><a data-scroll href="#services-pane" data-toggle="collapse" data-target="#navbar">Services</a></li>
                <li><a data-scroll href="#subjects-pane" data-toggle="collapse" data-target="#navbar">Subject Guides</a></li>
                <li><a data-scroll href="#news-pane" data-toggle="collapse" data-target="#navbar">News &amp; Events</a></li>
                <li><a data-scroll href="#research-pane" data-toggle="collapse" data-target="#navbar">Research Support</a></li>
                <li><a data-scroll href="#account-pane" data-toggle="collapse" data-target="#navbar">My Account</a></li>
                <li><a href="http://www.ualberta.ca">University of Alberta Home</a></li>
              </ul>
            </div><!-- End mobile menu -->
          </div>
        </div>
        <div id="main-nav" class="hidden-xs"><!-- Non-mobile Navigation -->
          <div class="col-sm-2 col-xs-2" id="home">
            <div>
              <h3><a data-scroll href="#top"><span></span>Search &amp; Home</a></h3>
            </div>
          </div>
          <div class="col-sm-15 col-xs-15" id="services">
            <div>
              <h3><a data-scroll href="#services-pane"><span></span>Services</a></h3>
              <p class="hidden-xs hidden-sm ">A complete list of the services available at our libraries.</p>
            </div>
          </div>
          <div class="col-sm-15 col-xs-15" id="subjects">
            <div>
              <h3><a data-scroll href="#subjects-pane"><span></span>Subject Guides</a></h3>
              <p class="hidden-sm hidden-xs">Let our librarians guide you to the information you need.</p>
            </div>
          </div>
          <div class="col-sm-15 col-xs-15" id="news">
            <div>
              <h3><a data-scroll href="#news-pane"><span></span>News &amp; Events</a></h3>
              <p class="hidden-sm hidden-xs">See library exhibits, announcments, and news.</p>
            </div>
          </div>
          <div class="col-sm-15 col-xs-15" id="research">
            <div>
              <h3><a data-scroll href="#research-pane"><span></span>Research Support</a></h3>
              <p class="hidden-sm hidden-xs">Help to manage, share, and preserve your research.</p>
            </div>
          </div>
          <div class="col-sm-15 col-xs-15" id="account">
            <div>
              <h3><a data-scroll href="#account-pane"><span></span>My Account</a></h3>
              <p class="hidden-sm hidden-xs">Login to renew books, place holds, pay fines, and more.</p>
            </div>
          </div>
        </div><!-- End non-mobile navigation -->
      </div>
    </div>
    <!-- End Header and Navigation -->

<%= yield %>

