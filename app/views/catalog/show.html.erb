<div id="content" class="col-md-9 show-document top-margin">
  <%= render 'previous_next_doc' %>
  <% @page_title = t('blacklight.search.show.title', :document_title => document_show_html_title, :application_name => application_name).html_safe -%>
  <% content_for(:head) { render_link_rel_alternates } -%>
  <div id="document" class="document <%= render_document_class %>" itemscope itemtype="<%= @document.itemtype %>">
    <div id="doc_<%= @document.id.to_s.parameterize %>" class="col-md-9">
      <% # bookmark/folder functions -%>
      <%= render_document_partials @document, blacklight_config.view_config(:show).partials %>

      <% if @subjects  %>
      <div id="subjects">
        <p class="blacklight-subject_topic_facet">Subjects</p>
        <ul>
          <% @subjects.each do |subject| %>
            <li><a href="/<%= params[:controller] %>?f%5Bsubject_topic_facet%5D%5B%5D=<%= subject.first %>&q=&view=brief"><%= subject.first %></a></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <% if @authors %>
     <div id="authors">
       <p class="blacklight-author_facet">Find more by <%= @authors.count > 1 ? "these authors" : "this author" %></p>
       <ul>
          <% @authors.each do |author| %>
            <li><a href="/<%= params[:controller] %>?utf8=✓&op=AND&all_fields=&title=&author=<%= author.split(" ").join("+") %>&subject=&utf8=✓&search_field=dummy_range&range%5Bpub_date%5D%5Bbegin%5D=&range%5Bpub_date%5D%5Bend%5D=&commit=Limit&sort=score+desc%2C+pub_date_sort+desc%2C+title_sort+asc&search_field=advanced"><%= author %></a></li>
          <% end %>
       </ul>
     </div>
   <% end %>

    <% if @document["format"].include? "Database" %>
      <table>
        <% if @document["abstract_tesim"] %>
          <tr><th>Abstract</th></tr>
          <tr><td><%= @document["abstract_tesim"].first %></td></tr>
        <% end %>
          <% if @document["coverage_tesim"] %>
          <tr><th>Coverage</th></tr>
          <tr><td><%= @document["coverage_tesim"].first %></td></tr>
        <% end %>
        <tr><th>URL</th></tr>
        <% if @document["enableproxy_tesim"].first == "0" %>
        <tr><td><a href="<%= @document['url_tesim'].first %>" target='_blank'><%= @document['url_tesim'].first %></a></><td>
            </tr>
          <% else %>
        <tr><td><a href="<%= Rails.application.config.proxy+@document['url_tesim'].first %>" target='_blank'><%= @document['url_tesim'].first %></a></><td>
            </tr>
          <% end %>
      <% if @document["minor_tesim"] %>
        <tr><th>Subjects</th></tr>
        <tr><td>
            <% for subject in @document["minor_tesim"] %>
            <%= subject %><br />
          <% end %>
          </td></tr>
      <% end %>
       <% if @document["conditions_tesim"] %>
          <tr><th>Conditions</th></tr>
          <tr><td><%= @document["conditions_tesim"].first %></td></tr>
        <% end %>
        </table>
        <% if @document["ua_only_tesim"] %>
          <% if @document["ua_only_tesim"].first == "1" %> <%= image_tag("icn_uofa.gif") %> <% end %>
        <% end %>
      <br />
      <% end %>
      <% if (@document["format"].include?("service") or @document["format"].include?("digital collection") or @document["format"].include?("library")) %>
        <table>
          <tr><th>URL: <a href="<%= @document["url_tesim"].first %>" target=_blank><%= @document["url_tesim"].first %></a></th></tr>
      </table>
      <br />
      <% end %>
    
      <% if @urls %>
        <% unless @urls.empty? && @alternative_urls.empty? %>
          <div id ="electronic_access">
            <% unless @urls.empty? %>
              <% @urls.each do |url| %>
                <span class="url-label">URL:</span>

                <% if url[:url].include? "databases" %>

                <a href="<%= url[:url] %>" target="_blank"><%= url[:display] %> <span><%= url[:url] %></span>
                </a>
              <% else %>
                <a href="<%= Rails.application.config.proxy+url[:url] %>" target="_blank"><%= url[:display] %> <span><%= url[:url] %></span>
                </a>

              <% end %>
              <% end %>
            <% end %>

            <% if (@urls.empty?) && (!@alternative_urls.empty?) %>
              <p>Note: No University of Alberta Access. On-campus access allowed at the following locations: </p>
              <% @alternative_urls.each do |url| %>
                <a href="<%= url[:url] %>" target="_blank"><%= url[:display] %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-3 full-record-book-jacket">
      <% if @document[:isbn_t] %>
        <img src="https://books.google.com/books?vid=ISBN<%= @document[:isbn_t].join %>&amp;printsec=frontcover&amp;img=1&amp;zoom=1">
      <% end %>
    </div>
</div>
</div>
  <div id="sidebar" class="col-md-3 top-margin">
  <%= render_document_sidebar_partial %>
</div>


<% unless @holdings.empty? %>
  <%= render "holdings" %>
  <% end %>
  </div>


