      <div id="subject-list">
        <p class="blacklight-subject_topic_facet">Subjects</p>
        <ul class="subject-chain-links">
          <% @subjects.each do |subject| %>
             <li>
            <%# subject=subject.reverse! %>
            <% subject.each_with_index do |asubject, index| %> 
            <% i = 0 %>
            <% sbstring = "" %>
            <% while( i <= index ) %>
              <% sbstring = sbstring + subject[i].gsub("&","").gsub(" ", "+") %>
                <% unless i == index %> 
                  <% sbstring = sbstring + "+" %>
                <% end %>
                <% i+= 1 %>
              <% end %>
              <a href="/catalog?q=<%= sbstring %>&view=brief&search_field=subject"><%= asubject %></a> 
            <% unless index == subject.size - 1  %>
              <span class="glyphicon glyphicon-menu-right"></span>
             <% end %>
        <% end %>
        </li>
        <% end %>
        </ul>
      </div>
