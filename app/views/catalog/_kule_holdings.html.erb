<table class="table table-responsive">
  <tr>
    <th class="call-number">Call Number</th>
    <th>Status</th>
    <th class="hidden-xs">Access</th>
    <th>Action</th>
  </tr>
  <% for item in @holdings %>
    <tr>
      <td>
        <%= item[:callnumber] %>
      </td>
      <td>
        <%= item[:status]  %>
      </td>
      <td>
        <a href="<%= item[:access_url] %>" target="_blank">
          <%= item[:access_title] %></a>
      </td>
      <td>
        <% if @document.respond_to?( :to_email_text ) %>
          <%= link_to "Email Me", email_catalog_path(:id => @document, :call=>item[:callnumber], :location=>item[:location]) , {:id => 'emailLink', :class => 'lightboxLink'} %>
        <% end %>
        <% if @document.respond_to?( :to_sms_text ) %>
          <%= link_to "Text Me", sms_catalog_path(:id => @document, :call=>item[:callnumber]), {:id => 'smsLink', :class => 'lightboxLink'} %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
