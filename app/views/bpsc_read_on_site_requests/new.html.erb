<h1><%= t('.header') %></h1>
<p><%= t('.lead_html') %></p>
<p><%= t('.review_policy_html') %></p>

<%= bootstrap_form_for(@bpsc_read_on_site_request) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :appointment_time, label: t('.date_of_planned_visit') %>
  <%= f.text_field :title %>
  <%= f.text_field :item_url, label: t('item_url'), help: t('item_url_help') %>

  <%= f.text_area :notes,
                  label: t('additional_notes'),
                  rows: 7,
                  cols: 45,
                  placeholder: '' %>

  <%= f.primary t('request_viewing') %>
<% end %>
